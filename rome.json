{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny":"off"
      },
      "complexity": {
        "useOptionalChain": "off"
      }, 
      "performance" : {
        "noDelete": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "files": {
    "ignore": ["node_modules"]
  }
}